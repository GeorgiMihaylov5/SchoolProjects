@model IEnumerable<MoreUsersApp.Models.Dog.DogListVM>

@{
    ViewData["Title"] = "Tърси кучета";
}

<h1>Всички кучета</h1>
<div>
    <form asp-controller="Dogs" asp-action="SearchDogs" method="post">
        <label for="dogs-age">Age</label>
        <input type="number" id="dogs-age" name="age"/>
        <button type="submit">Search</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreedName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BreedName)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Picture)" alt="Image" width="100" />
                </td>
            </tr>
        }
    </tbody>
</table>
