@model ParkingManager.Models.ParkingSpot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Spot</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="OwnerId" class="control-label"></label>
                <input asp-for="OwnerId" class="form-control" />
                <span asp-validation-for="OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RenterId" class="control-label"></label>
                <input asp-for="RenterId" class="form-control" />
                <span asp-validation-for="RenterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingSpotNumber" class="control-label"></label>
                <input asp-for="ParkingSpotNumber" class="form-control" />
                <span asp-validation-for="ParkingSpotNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsFree" class="control-label"></label>
                <input asp-for="IsFree" class="form-control" />
                <span asp-validation-for="IsFree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="savechangesbutton" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
